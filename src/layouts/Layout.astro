---
import "@fontsource-variable/inter";
import "@fontsource/source-serif-pro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="flex justify-center">
    <main
      class="flex min-h-screen w-screen max-w-[60rem] flex-col items-center p-10"
    >
      <slot />
    </main>
  </body>
</html>
